---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section class="p-16 md:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-5xl lg:text-7xl font-bold text-gray-900">
              Experience
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-gray-200" />

              {siteConfig.experience.map((exp) => (
                <div class="relative flex items-start mb-12 last:mb-0 group">
                  <div
                    class="absolute ml-0.5 left-8 w-4 h-4 bg-white border-2 border-gray-300 rounded-full -translate-x-1/2 group-hover:border-[var(--accent-color)] transition-colors duration-300"
                    style={`--accent-color: ${siteConfig.accentColor}`}
                  />

                  <div class="ml-20 flex-1">
                    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
                      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                        <div>
                          <h3 class="text-xl font-semibold text-gray-900">
                            {exp.title}
                          </h3>
                          <p
                            class="text-lg"
                            style={`color: ${siteConfig.accentColor}`}
                          >
                            {exp.company}
                          </p>
                        </div>
                        <span class="text-sm text-gray-500 mt-2 sm:mt-0">
                          {exp.dateRange}
                        </span>
                      </div>

                      <ul class="space-y-2">
                        {exp.bullets.map((bullet) => (
                          <li class="flex items-start">
                            <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                            <span class="text-gray-600">{bullet}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
